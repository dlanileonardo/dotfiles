[color]
  ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[user]
  name = Dlani Mendes
  email = dlanileonardo@gmail.com
[credential]
  helper = cache
[alias]
  cl = clone
  co = checkout
  ci = commit
  pu = pull
  ps = push
[push]
  default = current
[pull]
  default = current
[commit]
  template = ~/.gitmessage.txt
[core]
  excludesfile = ~/.gitignore
  editor = nano
[branch]
  autosetuprebase = always
[merge]
  tool = meld
[diff]
  # tool = meld
  # external = meld
[gui]
  editor = sublime_text
[difftool]
  prompt = true
  external = meld
